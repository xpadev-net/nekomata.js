{
  "name": "niwango",
  "version": "0.0.1",
  "description": "parse and execute niwango",
  "main": "dist/bundle.js",
  "types": "dist/dts/types.d.ts",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "pegjs": "pegjs --cache --optimize speed -o ./src/parser/parser.js --format umd --export-var parser ./src/grammer/niwango.pegjs",
    "watch": "rollup -c rollup.config.js -w",
    "typedoc": "typedoc --entryPointStrategy Expand --options tsdoc.json --out ./docs/ ./src/",
    "copy-dts": "npx copyfiles -u 2 src/@types/*.d.ts dist/dts",
    "prepublishOnly": "npm run copy-dts&&npm run build",
    "check-types": "npx tsc --noEmit --jsx react",
    "eslint": "eslint src/**/*.ts*",
    "eslint:fix": "eslint src/**/*.ts* --fix",
    "format": "prettier --write \"src/**/*.{tsx,ts,js,json,css,scss}\"",
    "lint": "npm run eslint&&npm run check-types",
    "lint:fix": "npm run eslint:fix&&npm run check-types&&npm run format",
    "prepare": "husky install"
  },
  "author": "xpadev(xpadev.net)",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.18.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "copyfiles": "^2.4.1",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.3",
    "pegjs": "^0.10.0",
    "prettier": "2.7.1",
    "rollup": "^2.77.0",
    "typedoc": "^0.23.9",
    "typedoc-plugin-missing-exports": "^0.23.0",
    "typescript": "^4.7.4"
  }
}
