{
  "name": "niwango",
  "version": "0.0.1",
  "description": "parse and execute niwango",
  "main": "dist/bundle.js",
  "types": "dist/dts/types.d.ts",
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "pegjs": "pegjs --cache --optimize speed -o ./src/parser/parser.js --format umd --export-var parser ./src/grammer/niwango.pegjs",
    "watch": "rollup -c rollup.config.js -w",
    "typedoc": "typedoc --entryPointStrategy Expand --out ./docs/ ./src/",
    "copy-dts": "npx copyfiles -u 2 src/@types/*.d.ts dist/dts",
    "prepublishOnly": "npm run copy-dts&&npm run build",
    "check-types": "npx tsc --noEmit --jsx react",
    "eslint": "eslint src/**/*.ts*",
    "eslint:fix": "eslint src/**/*.ts* --fix",
    "format": "prettier --write \"src/**/*.{tsx,ts,js,json,css,scss}\"",
    "lint": "npm run eslint&&npm run check-types",
    "lint:fix": "npm run format&&npm run eslint:fix&&npm run check-types",
    "prepare": "husky install",
    "test": "jest"
  },
  "author": "xpadev(xpadev.net)",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-commonjs": "^24.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/jest": "^29.1.0",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "8.5.0",
    "husky": "^8.0.0",
    "jest": "^29.1.1",
    "jest-environment-jsdom": "^29.1.1",
    "lint-staged": "^13.0.3",
    "pegjs": "^0.10.0",
    "prettier": "2.8.1",
    "rollup": "^3.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
